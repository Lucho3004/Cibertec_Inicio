@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers
@{
    ViewBag.Title = "Product";
}

@helper DisplayPriceRazor(double price)
{
if (price == 0.0)
{   <span>Free!!!</span>

}
else
{
        <span>@price</span>
}

}
 

<h2>Products</h2>
<ul>
    @foreach (var product in Model)
    {

        <li>
            <span>@product.Description: </span>
                @DisplayPriceRazor(product.Price) 
            <div>
                @CustomHelper.DisplayPriceStatic(product.Price)
            </div>
            <div>
              Exntesion Price:  @Html.DisplayPriceExtension(product.Price)
            </div>
            <div>
                Extension: @Html.DisplayDateOrNullExtension(product.CreateDate)
            </div> 
        </li>

    }
</ul>